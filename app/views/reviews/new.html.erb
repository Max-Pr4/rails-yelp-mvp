<h1 class="text-center my-4">Add a Review for <%= @restaurant.name %></h1>

<div class="container">
  <%= simple_form_for([@restaurant, @review]) do |f| %>
    <div class="card shadow-sm">
      <div class="card-body">
        <h2 class="card-title text-center mb-4">Share your thoughts</h2>

        <div class="form-group mb-3">
          <%= f.input :content, label: "Review Content", input_html: { class: "form-control", rows: 5, placeholder: "Write your review here..." } %>
        </div>

        <div class="form-group mb-3">
          <%= f.input :rating, label: "Rating", collection: 0..5, prompt: "Choose a rating", input_html: { class: "form-select" } %>
        </div>

        <div class="d-flex justify-content-between">
          <%= f.submit "Submit Review", class: "btn btn-primary btn-lg" %>
          <%= link_to "Back to Restaurant", restaurant_path(@restaurant), class: "btn btn-secondary btn-lg" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
